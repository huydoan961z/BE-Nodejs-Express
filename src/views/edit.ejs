<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit user</title>
    <link rel="stylesheet" href="/css/home.css">
</head>

<body style="margin: 0px 0px;">
    <%= JSON.stringify(useredit) %>
    <div class="topnav">
        <a href="#home">Home</a>
        <a class="active" href="/create">Create user</a>
        <a class="active" href="#home">Edit user</a>


    </div>

    <div class="form-add-new">
        <form action="/update-user/<%= useredit.id %>" method="post">
            <fieldset>
                <legend>Edit existing user:</legend>
                <label for="fname">Full name:</label>
                <input type="text" id="fname" name="fname" value="<%= useredit.name %>"><br><br>
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" value="<%= useredit.email %>"><br><br>
                <label for="city">City:</label>
                <input type="text" id="city" name="city" value="<%= useredit.city %>"><br><br>
                <input type="submit" value="Submit">
            </fieldset>
        </form>
    </div>
</body>

</html>